<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:gravity="end"
    android:id="@+id/item_recipe">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/porridge"
        android:layout_weight="1"
        android:id="@+id/item_recipe_image"
        android:contentDescription="@string/recipe_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Porridge"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:layout_marginStart="8dp"
        android:layout_weight="50"
        android:id="@+id/item_recipe_name"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/favorite_24dp"
        android:id="@+id/add_recipe_to_favorites_button"
        android:contentDescription="@string/add_recipe_to_favorites"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/add_shopping_cart_24dp"
        android:id="@+id/add_recipe_to_shopping_cart"
        android:contentDescription="@string/add_recipe_to_shopping_cart"/>
</LinearLayout>